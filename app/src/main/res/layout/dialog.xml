                        android:columnCount="3"
                        android:paddingTop="12dp"
                        android:layout_centerHorizontal="true"
                        android:useDefaultMargins="true">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="50dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:background="@drawable/transportlineblue" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1">

                            <RelativeLayout
                                android:id="@+id/map_arrival_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/map_arrival_header2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:paddingBottom="12dp"
                                    android:text="Прибытие"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/map_arrival_header2"
                                    android:layout_marginTop="-10dp"
                                    android:text="14:00"
                                    android:textSize="16sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/map_dep_time_section2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/map_arrival_time2"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/map_dep_time_header2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:paddingBottom="12dp"
                                    android:text="Отбытие"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/map_dep_time_header2"
                                    android:layout_marginTop="-10dp"
                                    android:text="--------------"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </GridLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
