<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_admin">

    <fragment
        android:id="@+id/navigation_driver"
        android:name="com.example.silkwaytransit.ui.DriverFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_driver" >
    </fragment>

    <fragment
        android:id="@+id/navigation_duty"
        android:name="com.example.silkwaytransit.ui.duty.DutyFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_duty" >
    </fragment>

    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.silkwaytransit.ui.home.map.MapsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_maps" >
    </fragment>

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.silkwaytransit.ui.user.UserFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_user" />


</navigation>